@model RegistrationModel
@{
    ViewData["Title"] = "Register";
}

@if (Model?.Name != null)
{
    <div class="alert-success">
        <h4 class="">Thank you!</h4>
        <p>Your details:</p>
        <p>Name: @Model.Name</p>
        <p>Surname: @Model.Surname</p>
        <p>Email: @Model.Email</p>
        <p>Age: @Model.Age</p>
    </div>
}
else
{
    <h2>Registration</h2>
    <form asp-controller="Registration" asp-action="Post" method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Name" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.Surname"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Surname" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.Age"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Age" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success form-control">Register</button>
    </form>
}